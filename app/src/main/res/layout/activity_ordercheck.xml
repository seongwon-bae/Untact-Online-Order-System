<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="10dp"
                android:includeFontPadding="false"
                android:text="주문 확인"
                android:gravity="center"
                android:textSize="20dp"
                android:background="#808080"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/move_direction_bt"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/order"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:includeFontPadding="false"
                        android:text="주문 번호"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/order1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="15sp"
                        android:includeFontPadding="false" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="74dp"
                />

            <LinearLayout
                android:id="@+id/movement_left_bt"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/food"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textSize="16dp"
                        android:text="주문 음식"
                        android:includeFontPadding="false" />

                    <TextView
                        android:id="@+id/food1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="15sp"
                        android:includeFontPadding="false" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="74dp"
                />

            <LinearLayout
                android:id="@+id/movement_right_bt"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/money"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textSize="16dp"
                        android:text="결제 금액"
                        android:includeFontPadding="false" />

                    <TextView
                        android:id="@+id/money1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="15sp"
                        android:includeFontPadding="false" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="74dp"
                />

            <LinearLayout
                android:id="@+id/movement_top_bt"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textSize="16dp"
                        android:text="결제 날짜"
                        android:includeFontPadding="false" />

                    <TextView
                        android:id="@+id/date1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="15sp"
                        android:includeFontPadding="false" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="74dp"
                />

            <LinearLayout
                android:id="@+id/movement_bottom_bt"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/how"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textSize="16dp"
                        android:text="결제 수단"
                        android:includeFontPadding="false" />

                    <TextView
                        android:id="@+id/how1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="15sp"
                        android:includeFontPadding="false" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="74dp"
                />

            <LinearLayout
                android:id="@+id/movement_inner_offset_bt"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textSize="16dp"
                        android:text="주문 요청 사항"
                        android:includeFontPadding="false" />

                    <TextView
                        android:id="@+id/comment1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="15sp"
                        android:includeFontPadding="false" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="74dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="74dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="74dp"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
